{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "tasks": {
    "build": "deno run --check --unstable-bundle --allow-read=./generated --allow-write=./generated ./script/build.ts",
    "build-watch": "deno run --check --unstable-bundle --allow-read=./generated --allow-write=./generated --watch=client ./script/build.ts",
    "start": "deno run --check --allow-net --allow-read=./generated ./server/main.tsx",
    "start-watch": "deno run --check --watch --allow-net --allow-read=./generated ./server/main.tsx"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "hono": "npm:hono@^4.10.6"
  }
}
