{
  "name": "definy",
  "version": "0.1.0",
  "description": "definy is web app for web app",
  "author": "narumincho",
  "repository": {
    "type": "git",
    "url": "https://github.com/narumincho/definy"
  },
  "scripts": {
    "typeCheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest && npx tsc --project ./tsconfig-purs-ffi.json & npx spago test",
    "generate-graph": "depcruise -X node_modules --output-type dot client/main.tsx functions/main.ts core/main.ts build/main.ts | dot -T svg > graph.svg",
    "generate-local-data": "npx tsc --project ./tsconfig-purs-ffi.json & npx spago run --main DataTs.Build",
    "build-node-package": "npx tsc --project ./tsconfig-purs-ffi.json & npx spago run --main BuildNodePackage",
    "storybook": "start-storybook --config-dir ./storybook",
    "update-package-json": "ncu -u",
    "start-definy": "npx tsc --project ./tsconfig-purs-ffi.json && npx spago run --main Definy.Start",
    "start-definy-client": "npx next dev",
    "start-definy-firebase-emulators": "firebase emulators:start --project definy-lang --config ./distribution/definy/firebase.json",
    "package-vscode-extension": "cd ./distribution/definy-extension && npx vsce package"
  },
  "engines": {
    "node": "16"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@emotion/css": "11.10.0",
    "@material-ui/core": "4.12.4",
    "@storybook/addon-a11y": "6.5.10",
    "@storybook/addon-actions": "6.5.10",
    "@storybook/addon-essentials": "6.5.10",
    "@storybook/addon-links": "6.5.10",
    "@storybook/react": "6.5.10",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "28.1.6",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "18.6.4",
    "@types/react": "18.0.16",
    "@types/react-dom": "18.0.6",
    "@types/vscode": "1.70.0",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "axios": "0.27.2",
    "babel-loader": "8.2.5",
    "dependency-cruiser": "11.14.1",
    "esbuild": "0.14.53",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "firebase-admin": "11.0.1",
    "firebase-functions": "3.22.0",
    "firebase-tools": "11.4.2",
    "fs-extra": "10.1.0",
    "jest": "28.1.3",
    "jimp": "0.16.1",
    "jsonwebtoken": "8.5.1",
    "next": "12.2.4",
    "npm-check-updates": "16.0.5",
    "prettier": "2.7.1",
    "purescript": "0.15.4",
    "purty": "7.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sha256-uint8array": "0.10.3",
    "spago": "0.20.9",
    "storybook-dark-mode": "1.1.0",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "typed-admin-firestore": "1.2.2",
    "typescript": "4.7.4",
    "vsce": "2.10.0"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintConfig": {
    "extends": [
      "eslint:all",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "sort-keys": [
        "off"
      ],
      "no-magic-numbers": [
        "off"
      ],
      "max-lines-per-function": [
        "off"
      ],
      "no-undefined": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "no-ternary": [
        "off"
      ],
      "id-length": [
        "off"
      ],
      "consistent-return": [
        "off"
      ],
      "new-cap": [
        "off"
      ],
      "no-use-before-define": [
        "off"
      ],
      "max-lines": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "max-params": [
        "off"
      ],
      "prefer-template": [
        "off"
      ],
      "spaced-comment": [
        "off"
      ],
      "no-bitwise": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "array-callback-return": [
        "off"
      ],
      "max-statements": [
        "off"
      ],
      "camelcase": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "@typescript-eslint/restrict-plus-operands": [
        "error",
        {
          "checkCompoundAssignments": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-dynamic-delete": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-unnecessary-qualifier": [
        "error"
      ],
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ],
      "@typescript-eslint/prefer-for-of": [
        "error"
      ],
      "@typescript-eslint/require-array-sort-compare": [
        "error"
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "@typescript-eslint/no-empty-function": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  }
}