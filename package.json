{
  "name": "definy",
  "version": "0.1.0",
  "description": "definy is web app for web app",
  "author": "narumincho",
  "repository": {
    "type": "git",
    "url": "https://github.com/narumincho/definy"
  },
  "scripts": {
    "typeCheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest",
    "generate-graph": "depcruise -X node_modules --output-type dot client/main.tsx functions/main.ts core/main.ts pages/*.tsx | dot -T svg > graph.svg",
    "generate-local-data": "npm exec tsc --project ./tsconfig-purs-ffi.json & npm exec spago run --main DataTs.Build",
    "build-node-package": "npm exec tsc --project ./tsconfig-purs-ffi.json & npm exec spago run --main BuildNodePackage",
    "update-package-json": "ncu -u",
    "start-definy": "npm tsc --project ./tsconfig-purs-ffi.json && npm exec spago run --main Definy.Start && firebase emulators:start --project definy-lang --config ./distribution/definy/firebase.json",
    "package-vscode-extension": "cd ./distribution/definy-extension && npm exec vsce package",
    "dev-local": "npm exec vercel dev"
  },
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.315.0",
    "@emotion/css": "11.10.6",
    "@emotion/react": "11.10.6",
    "@material-ui/core": "4.12.4",
    "@next/eslint-plugin-next": "13.3.0",
    "@trpc/client": "10.20.0",
    "@trpc/next": "10.20.0",
    "@trpc/react": "9.27.4",
    "@trpc/server": "10.20.0",
    "@types/fs-extra": "11.0.1",
    "@types/jest": "29.5.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.15.11",
    "@types/node-red": "1.3.1",
    "@types/react": "18.0.37",
    "@types/react-dom": "18.0.11",
    "@types/vscode": "1.77.0",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "axios": "1.3.5",
    "babel-loader": "9.1.2",
    "esbuild": "0.17.17",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "faunadb": "4.8.0",
    "firebase-admin": "11.7.0",
    "firebase-functions": "4.3.0",
    "firebase-tools": "11.28.0",
    "fs-extra": "11.1.1",
    "jest": "29.5.0",
    "jimp": "0.22.7",
    "jsonwebtoken": "9.0.0",
    "next": "13.3.0",
    "npm-check-updates": "16.10.8",
    "prettier": "2.8.7",
    "purescript": "0.15.8",
    "purty": "7.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "3.39.3",
    "sha256-uint8array": "0.10.5",
    "spago": "0.20.9",
    "superjson": "1.12.2",
    "ts-jest": "29.1.0",
    "typed-admin-firestore": "1.3.1",
    "typescript": "5.0.4",
    "vercel": "28.18.5",
    "vsce": "2.14.0",
    "zod": "3.21.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/deno-lib/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:all",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:@next/next/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "project": [
        "./tsconfig.json",
        "./nodeRedPackage/tsconfig.json"
      ]
    },
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "sort-keys": [
        "off"
      ],
      "no-magic-numbers": [
        "off"
      ],
      "max-lines-per-function": [
        "off"
      ],
      "no-undefined": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "no-ternary": [
        "off"
      ],
      "id-length": [
        "off"
      ],
      "consistent-return": [
        "off"
      ],
      "new-cap": [
        "off"
      ],
      "no-use-before-define": [
        "off"
      ],
      "max-lines": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "max-params": [
        "off"
      ],
      "prefer-template": [
        "off"
      ],
      "spaced-comment": [
        "off"
      ],
      "no-bitwise": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "array-callback-return": [
        "off"
      ],
      "max-statements": [
        "off"
      ],
      "camelcase": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "@typescript-eslint/restrict-plus-operands": [
        "error",
        {
          "checkCompoundAssignments": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-dynamic-delete": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-unnecessary-qualifier": [
        "error"
      ],
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ],
      "@typescript-eslint/prefer-for-of": [
        "error"
      ],
      "@typescript-eslint/require-array-sort-compare": [
        "error"
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "@typescript-eslint/no-empty-function": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "packageManager": "npm@9.2.0"
}