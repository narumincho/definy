{
  "name": "definy",
  "version": "0.1.0",
  "description": "definy is web app for web app",
  "author": "narumincho",
  "repository": {
    "type": "git",
    "url": "https://github.com/narumincho/definy"
  },
  "scripts": {
    "typeCheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest",
    "generate-graph": "depcruise -X node_modules --output-type dot client/main.tsx functions/main.ts core/main.ts pages/*.tsx | dot -T svg > graph.svg",
    "generate-local-data": "pnpm exec tsc --project ./tsconfig-purs-ffi.json & pnpm exec spago run --main DataTs.Build",
    "build-node-package": "pnpm exec tsc --project ./tsconfig-purs-ffi.json & pnpm exec spago run --main BuildNodePackage",
    "storybook": "start-storybook --config-dir ./storybook",
    "update-package-json": "ncu -u",
    "start-definy": "pnpm tsc --project ./tsconfig-purs-ffi.json && pnpm exec spago run --main Definy.Start && firebase emulators:start --project definy-lang --config ./distribution/definy/firebase.json",
    "package-vscode-extension": "cd ./distribution/definy-extension && pnpm exec vsce package",
    "dev-local": "pnpm exec vercel dev",
    "database-migration": "node -r @swc-node/register ./databaseMigration.ts"
  },
  "engines": {
    "node": "16"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.201.0",
    "@babel/core": "7.19.6",
    "@emotion/css": "11.10.5",
    "@emotion/react": "11.10.5",
    "@material-ui/core": "4.12.4",
    "@next/eslint-plugin-next": "13.0.1",
    "@storybook/addon-a11y": "6.5.13",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/react": "6.5.13",
    "@swc-node/register": "1.5.4",
    "@trpc/client": "9.27.4",
    "@trpc/next": "9.27.4",
    "@trpc/react": "9.27.4",
    "@trpc/server": "9.27.4",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.2.1",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "18.11.9",
    "@types/node-red": "1.2.1",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "@types/vscode": "1.72.0",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "axios": "1.1.3",
    "babel-loader": "9.0.1",
    "dependency-cruiser": "11.18.0",
    "esbuild": "0.15.12",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "faunadb": "4.7.1",
    "firebase-admin": "11.2.0",
    "firebase-functions": "4.0.2",
    "firebase-tools": "11.16.0",
    "fs-extra": "10.1.0",
    "jest": "29.2.2",
    "jimp": "0.16.2",
    "jsonwebtoken": "8.5.1",
    "next": "13.0.1",
    "npm-check-updates": "16.3.16",
    "prettier": "2.7.1",
    "purescript": "0.15.6",
    "purty": "7.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "3.39.2",
    "sha256-uint8array": "0.10.3",
    "spago": "0.20.9",
    "storybook-dark-mode": "1.1.2",
    "superjson": "1.11.0",
    "ts-jest": "29.0.3",
    "typed-admin-firestore": "1.2.2",
    "typescript": "4.8.4",
    "vercel": "28.4.12",
    "vsce": "2.13.0",
    "zod": "3.19.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/deno-lib/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:all",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:@next/next/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "project": [
        "./tsconfig.json",
        "./nodeRedPackage/tsconfig.json"
      ]
    },
    "rules": {
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "one-var": [
        "error",
        "never"
      ],
      "sort-keys": [
        "off"
      ],
      "no-magic-numbers": [
        "off"
      ],
      "max-lines-per-function": [
        "off"
      ],
      "no-undefined": [
        "off"
      ],
      "default-case": [
        "off"
      ],
      "no-ternary": [
        "off"
      ],
      "id-length": [
        "off"
      ],
      "consistent-return": [
        "off"
      ],
      "new-cap": [
        "off"
      ],
      "no-use-before-define": [
        "off"
      ],
      "max-lines": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "max-params": [
        "off"
      ],
      "prefer-template": [
        "off"
      ],
      "spaced-comment": [
        "off"
      ],
      "no-bitwise": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "array-callback-return": [
        "off"
      ],
      "max-statements": [
        "off"
      ],
      "camelcase": [
        "off"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-destructuring": [
        "off"
      ],
      "@typescript-eslint/restrict-plus-operands": [
        "error",
        {
          "checkCompoundAssignments": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "generic"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-dynamic-delete": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-unnecessary-qualifier": [
        "error"
      ],
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ],
      "@typescript-eslint/prefer-for-of": [
        "error"
      ],
      "@typescript-eslint/require-array-sort-compare": [
        "error"
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "@typescript-eslint/no-empty-function": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "packageManager": "pnpm@7.14.1"
}