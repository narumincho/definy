{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2020"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "rootDir": "."
  }
}
