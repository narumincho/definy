{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "required": [
        "name",
        "types"
    ],
    "$defs": {
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-f]{32}$",
            "description": "UUID"
        }
    },
    "minProperties": 2,
    "properties": {
        "name": {
            "type": "string"
        },
        "types": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "#/$defs/uuid",
                        "description": "field を識別するID"
                    },
                    "name": {
                        "type": "string",
                        "description": "field名"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "id",
                                "name",
                                "type"
                            ],
                            "properties": {
                                "id": {
                                    "$ref": "#/$defs/uuid"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}